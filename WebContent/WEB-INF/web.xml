<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
 
        
	<servlet>
	<servlet-name>login</servlet-name>
	<servlet-class>com.Customer.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/log11</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>updatecustomer</servlet-name>
	<servlet-class>com.Customer.UpdateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>updatecustomer</servlet-name>
	<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>deletecustomer</servlet-name>
	<servlet-class>com.Customer.DeleteCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>deletecustomer</servlet-name>
	<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>Add</servlet-name>
	<servlet-class>com.Product.AddNewProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Add</servlet-name>
	<url-pattern>/AddProduct</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
	<servlet-name>Contact</servlet-name>
	<servlet-class>com.contact.ContactServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Contact</servlet-name>
	<url-pattern>/contact</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
	<servlet-name>Order</servlet-name>
	<servlet-class>com.Order.OrderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Order</servlet-name>
	<url-pattern>/order</url-pattern>
	</servlet-mapping>
	
	
	
	
	
	
	
	
	
	</web-app>